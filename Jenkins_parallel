pipeline{
    agent any
    stages{
        stage('checkout'){
            steps{
                echo "this is checkout stage"
                sleep 5
            }
        }
        stage('Build'){
            step{
                echo "this is build stage"
                sleep 5
            }
        }
        stage('test1'){
            steps{
                echo "this is test1 chrome stage1"
                sleep 5
            }
        }
        stage('test2'){
        steps{
            echo "this is test2 firefox stage"
            sleep 5
            }
         }
         stage('parallel testing'){
            pipeline{
                stage 'test1'{
                    steps{
                        echo " this is test1 chrome"
                    }
                }
            }
         }
    }
}